{
    "harvester": {        
      "idField": "ID",
      "recordIDPrefix": "redbox-mint.googlecode.com/services/"
    },

    "transformer": {
        "curation": ["local"],
        "metadata": ["jsonVelocity"]
    },
    "curation": {
        "neverPublish": false,
        "alreadyCurated": false
    },

    "transformerOverrides": {
        "local": {
            "template": "${server.url.base}published/detail/[[OID]]"
        },
        "jsonVelocity": {
            "templatesPath" : "${fascinator.home}/templates/services",
            "portalId": "Services"
        }
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "${fascinator.home}/harvest/Services.py"
        },
        "params": {
            "repository.name": "Local Services",
            "repository.type": "Services"
        }
    }
}
